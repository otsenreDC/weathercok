<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CompassView">
        <attr name="radius" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="innerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArrowView">
        <attr name="thick" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PointerView">
        <attr name="maxIntensityColor" format="color"/>
        <attr name="minIntensityColor" format="color"/>
        <attr name="length" format="dimension"/>
        <attr name="intensity" format="integer"/>
        <attr name="aperture" format="dimension"/>
        <attr name="lineThick" format="dimension"/>
    </declare-styleable>
</resources>